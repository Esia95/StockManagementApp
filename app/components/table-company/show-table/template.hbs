<table class='table table-striped container-fluid' id='show-table'>
  <thead>
    <tr>
      <th scope='col'>Article</th>
      <th scope='col'>Amount</th>

      {{#if (should-display-column @company 'targets')}}
        <th scope='col'>Place</th>
      {{/if}}

      {{#if (should-display-column @company 'note')}}
        <th scope='col' {{! data-test-company-note }}>Note</th>
      {{/if}}

      <th scope='col'>Date of order</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.isActiveOrders as |order index|}}
      <tr>
        <td data-test-order-article={{index}}>{{order.article}}</td>

        <td data-test-order-count={{index}}>{{order.count}} {{order.unit}}</td>
        {{#if (should-display-column @company 'targets')}}
          <td data-test-order-place={{index}}>{{order.targets}}</td>
        {{/if}}
        {{#if (should-display-column @company 'note')}}
          <td data-test-order-notes={{index}}>{{order.note}}</td>
        {{/if}}

        <td data-test-order-date={{index}}>
          {{#if order.isOrdered}}
            {{moment-format order.createdDate 'DD-MM-YYYY'}}
          {{/if}}
        </td>

        <td>
          <div class='form-check'>
            {{#if order.isOrdered}}
              <input
                id='flexCheckDefault'
                class='form-check-input'
                type='checkbox'
                value=''
                checked={{order.createdDate}}
                {{on 'click' (fn this.onDateOrdered order)}}
                disabled
              />
            {{else}}
              <input
                id='flexCheckDefault'
                class='form-check-input'
                type='checkbox'
                value=''
                checked={{order.createdDate}}
                {{on 'click' (fn this.onDateOrdered order)}}
              />
            {{/if}}
          </div>
        </td>

        <div class='input-group-sm' id='edit'>
          <td>
            <button
              class='btn'
              type='button'
              {{on 'click' (fn this.onShowModal order)}}
            >
              <FaIcon @icon='pen-to-square' />
            </button>
          </td>
          <td>
            <button
              class='btn'
              type='button'
              {{on 'click' (fn this.onArchive order)}}
            >
              <FaIcon @icon='box-archive' />
            </button>
          </td>
          <td>
            <button
              class='btn'
              type='button'
              {{on 'click' (fn this.onDeleted order)}}
            >
              <FaIcon @icon='trash-can' />
            </button>
          </td>
        </div>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#if this.isShowModal}}
  <TableCompany::ShowTable::Modal
    @order={{this.selectedOrderToEdit}}
    @onClose={{this.onHideModal}}
    @company={{@company}}
  />
{{/if}}