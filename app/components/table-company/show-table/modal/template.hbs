<ModalDialog @translucentOverlay={{true}}>
  <div class='container'>
    <thead>
      <tr>
        <th scope='col'>Artykuły</th>
        <th scope='col'>Ilość</th>
        <th scope='col'>Miejsce</th>
        <th scope='col'>Note</th>
        <th scope='col'>Data zamówienia</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='article'
              placeholder='artykuł'
              value={{@order.article}}
              disabled
            />
          </div>
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='number'
              class='form-control'
              id='count'
              placeholder='ilość'
              value={{@order.count}}
              {{on 'input' (fn this.onPropertyChange 'count')}}
            />
          </div>
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='price'
              placeholder='miejsce'
              value={{@order.targets}}
              {{on 'input' (fn this.onPropertyChange 'targets')}}
            />
          </div>
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='note'
              placeholder='note'
              value={{@order.note}}
              {{on 'input' (fn this.onPropertyChange 'note')}}
            />
          </div>
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='date'
              placeholder='data'
              value={{moment-format @order.createdDate 'DD-MM-YYYY'}}
              disabled
            />
          </div>
        </td>

      </tr>
    </tbody>

    <div class='d-flex'>
      <button
        type='submit'
        class='btn btn-primary w-50 me-1'
        disabled={{this.shouldDisabledButton}}
        {{on 'click' this.onSave}}
      >
        <FaIcon @icon='check' />
      </button>

      <button
        type='button'
        class='btn btn-danger w-50 ms-1'
        {{on 'click' this.onClose}}
      >
        <FaIcon @icon='xmark' />
      </button>
    </div>

  </div>
</ModalDialog>