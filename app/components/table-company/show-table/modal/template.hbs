<ModalDialog @translucentOverlay={{true}} @onClickOverlay={{this.onClose}}>
  <div class='container'>
    <thead>
      <tr>
        <th scope='col'>Articles</th>
        <th scope='col'>Amount</th>
        {{#if (should-display-column @company 'targets')}}
          <th scope='col'>Company</th>
        {{/if}}

        {{#if (should-display-column @company 'note')}}
          <th scope='col'>Note</th>
        {{/if}}
        <th scope='col'>Date of order</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='article'
              placeholder='Article'
              value={{@order.article}}
              disabled
            />
          </div>
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          <div class='col-sm-10'>
            <input
              type='number'
              class='form-control'
              id='count'
              placeholder='Amount'
              value={{@order.count}}
              {{on 'input' (fn this.onPropertyChange 'count')}}
            />
          </div>
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          {{#if (should-display-column @company 'targets')}}
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='price'
                placeholder='company'
                value={{@order.targets}}
                {{on 'input' (fn this.onPropertyChange 'targets')}}
              />
            </div>
          {{/if}}
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>

          </label>
          {{#if (should-display-column @company 'note')}}
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='note'
                placeholder='note'
                value={{@order.note}}
                {{on 'input' (fn this.onPropertyChange 'note')}}
              />
            </div>
          {{/if}}
        </td>

        <td>
          <label for='username' class='col-sm-2 col-form-label'>
          </label>

          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='date'
              placeholder='date'
              value={{moment-format @order.createdDate 'DD-MM-YYYY'}}
              disabled
            />
          </div>
        </td>

      </tr>
    </tbody>

    <div class='d-flex'>
      <button
        type='submit'
        class='btn btn-primary w-50 me-1'
        disabled={{this.shouldDisabledButton}}
        {{on 'click' this.onSave}}
      >
        <FaIcon @icon='check' />
      </button>

      <button
        type='button'
        class='btn btn-danger w-50 ms-1'
        {{on 'click' this.onClose}}
      >
        <FaIcon @icon='xmark' />
      </button>
    </div>

  </div>
</ModalDialog>