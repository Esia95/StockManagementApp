<div>
  <tbody>
    <tr>
      <td>
        <PowerSelect
          @searchEnabled={{true}}
          @options={{this.articles}}
          @placeholder='Select article'
          @selected={{this.selectedArticle}}
          @searchField='name'
          @onChange={{this.onChangeArticle}}
          as |article|
        >
          {{article.name}}
        </PowerSelect>
      </td>

      <td>
        <PowerSelect
          @searchEnabled={{true}}
          @options={{this.count}}
          @placeholder='Select amount'
          @selected={{this.stockModel.count}}
          @searchField='name'
          @onChange={{set this.stockModel 'count'}}
          as |count|
        >
          {{count}}
        </PowerSelect>
      </td>

      <td>
        <PowerSelect
          @searchEnabled={{true}}
          @options={{this.unit}}
          @placeholder='Select unit'
          @selected={{this.stockModel.unit}}
          @searchField='name'
          @onChange={{set this.stockModel 'unit'}}
          as |unit|
        >
          {{unit}}
        </PowerSelect>
      </td>

    </tr>
  </tbody>

  <tbody>
    <tr>
      <td>
        <input
          class='form-control'
          type='number'
          placeholder='Product price'
          aria-label='default input example'
          value={{this.stockModel.price}}
          {{on 'input' (fn this.onPropertyChange 'price')}}
        />
      </td>
      <td>
        <label>
          <PikadayInput
            class='form-control form'
            placeholder='Select a date'
            @format='DD-MM-YYYY'
            @value={{this.stockModel.invoiceDate}}
            @onSelection={{set this.stockModel 'invoiceDate'}}
          />
        </label>
      </td>
      <td>
        <input
          class='form-control'
          type='text'
          placeholder='No. invoices'
          aria-label='default input example'
          value={{this.stockModel.invoice}}
          {{on 'input' (fn this.onPropertyChange 'invoice')}}
        />
      </td>
    </tr>
  </tbody>
</div>

<div>
  <button
    class='btn btn-primary'
    type='submit'
    id='form-control'
    disabled={{this.stockModel.isEmptyField}}
    {{on 'click' this.onSave}}
  >
    <FaIcon @icon='plus' />
  </button>

  <button type='button' class='btn btn-primary' {{on 'click' this.clear}}>
    <FaIcon @icon='xmark' />
  </button>

</div>