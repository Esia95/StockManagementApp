<div>
  <tbody>
    <tr>
      <td>
        <Shared::PowerSelect
          @placeholder='Wybierz artykuł'
          @options={{this.articles}}
          @selected={{this.selectedArticle}}
          @onChange={{this.onChangeArticle}}
          as |value|
        >
          {{value.name}}
        </Shared::PowerSelect>
      </td>
      <td>
        <Shared::PowerSelect
          @placeholder='Wybierz ilość'
          @options={{this.count}}
          @selected={{this.stockModel.count}}
          @onChange={{set this.stockModel 'count'}}
          as |value|
        >
          {{value}}
        </Shared::PowerSelect>
      </td>
      <td>
        <Shared::PowerSelect
          @placeholder='Wybierz jednostkę'
          @options={{this.unit}}
          @selected={{this.stockModel.unit}}
          @onChange={{set this.stockModel 'unit'}}
          as |value|
        >
          {{value}}
        </Shared::PowerSelect>
      </td>
    </tr>
  </tbody>

  <tbody>
    <tr>
      <td>
        <Shared::Input
          @type='number'
          @placeholder='Cena produktu'
          @value={{this.stockModel.price}}
          @onChange={{fn this.onPropertyChange 'price'}}
        />
      </td>
      <td>
        <label>
          <PikadayInput
            class='form-control form'
            placeholder='Data faktury'
            @format='DD-MM-YYYY'
            @value={{this.stockModel.invoiceDate}}
            @onSelection={{set this.stockModel 'invoiceDate'}}
          />
        </label>
      </td>
      <td>
        <Shared::Input
          @placeholder='Nr. faktury'
          @value={{this.stockModel.invoice}}
          @onChange={{fn this.onPropertyChange 'invoice'}}
        />
      </td>
    </tr>
  </tbody>
</div>

<div>
  <Shared::Button
    disabled={{this.stockModel.isEmptyField}}
    @faIcon='plus'
    @label='Dodaj'
    @onClick={{this.onSave}}
  />
  <Shared::Button @faIcon='xmark' @label='Wyczyść' @onClick={{this.clear}} />
</div>