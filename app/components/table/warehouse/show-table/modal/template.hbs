<ModalDialog @translucentOverlay={{true}}>
  <div class='container'>
    <thead>
      <tr>
        <th scope='col'>Artykuły</th>
        <th scope='col'>Ilość</th>
        <th scope='col'>Cena/szt</th>
        <th scope='col'>Data zamówienia</th>
        <th scope='col'>Nr. faktury</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='article'
                placeholder='artykuł'
                value={{@order.article}}
                disabled
              />
            </div>
          </div></td>
        <td><div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <input
                type='number'
                class='form-control'
                id='count'
                placeholder='ilość'
                value={{@order.count}}
                {{on 'input' (fn this.onPropertyChange 'count')}}
              />
            </div>
          </div></td>
        <td><div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <input
                type='number'
                class='form-control'
                id='price'
                placeholder='cena'
                value={{@order.price}}
                {{on 'input' (fn this.onPropertyChange 'price')}}
              />
            </div>
          </div></td>
        <td><div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='date'
                placeholder='Data'
                value={{moment-format @order.invoiceDate 'DD-MM-YYYY'}}
                disabled
              />
            </div>
          </div></td>
        <td><div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <input
                type='text'
                class='form-control'
                id='invoice'
                placeholder='Nr. faktury'
                value={{@order.invoice}}
                {{on 'input' (fn this.onPropertyChange 'invoice')}}
              />
            </div>
          </div></td>
      </tr>
    </tbody>

    <div class='mb-3 row'>
      <div class='d-flex'>
        <button
          type='submit'
          class='btn btn-primary w-50 me-1'
          disabled={{this.shouldDisabledButton}}
          {{on 'click' this.onSave}}
        >Save</button>
        <button
          type='button'
          class='btn btn-danger w-50 ms-1'
          {{on 'click' this.onClose}}
        >Cancel</button>
      </div>
    </div>
  </div>
</ModalDialog>