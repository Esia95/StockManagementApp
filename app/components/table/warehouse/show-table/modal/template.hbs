<ModalDialog @translucentOverlay={{true}}>
  <div class='container'>
    <thead>
      <tr>
        <th scope='col'>Artukuł</th>
        <th scope='col'>Ilość</th>
        <th scope='col'>Cena/szt</th>
        <th scope='col'>Data zamówienia</th>
        <th scope='col'>Nr. faktury</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>
          <div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <Shared::Input
                @type='text'
                @placeholder='Artykuł'
                @value={{@order.article}}
                disabled
              />
            </div>
          </div>
        </td>
        <td>
          <div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <Shared::Input
                @type='number'
                @placeholder='Ilość'
                @value={{@order.count}}
                @onChange={{fn this.onPropertyChange 'count'}}
              />
            </div>
          </div>
        </td>
        <td>
          <div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <Shared::Input
                @type='number'
                @placeholder='Cena'
                @value={{@order.price}}
                @onChange={{fn this.onPropertyChange 'price'}}
              />
            </div>
          </div>
        </td>
        <td>
          <div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <Shared::Input
                @type='text'
                @placeholder='Data'
                @value={{moment-format @order.invoiceDate 'DD-MM-YYYY'}}
                disabled
              />
            </div>
          </div>
        </td>
        <td>
          <div class='mb-3 row'>
            <label for='username' class='col-sm-2 col-form-label'></label>
            <div class='col-sm-10'>
              <Shared::Input
                @type='text'
                @placeholder='Nr. faktury'
                @value={{@order.invoice}}
                @onChange={{fn this.onPropertyChange 'invoice'}}
              />
            </div>
          </div>
        </td>
      </tr>
    </tbody>

    <div class='mb-3 row'>
      <div class='d-flex'>
        <Shared::Button
          class='btn-primary w-50 me-1'
          disabled={{this.shouldDisabledButton}}
          @label='Zapisz'
          @onClick={{this.onSave}}
        />
        <Shared::Button
          class='btn-primary w-50 me-1'
          @label='Cofnij'
          @onClick={{this.onClose}}
        />
      </div>
    </div>
  </div>
</ModalDialog>