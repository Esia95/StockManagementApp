<ModalDialog @translucentOverlay={{true}}>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Notatka
        </h5>
      </div>

      <div class='modal-body'>
        <div class='mb-3'>
          <label
            for='exampleFormControlInput1'
            class='form-label'
          >Treść:</label>
          <input
            class='form-control'
            id='postTitle'
            value={{@note}}
            {{on 'input' @onNoteChange}}
          />
        </div>
      </div>

      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-danger'
          {{on 'click' @onClose}}
        >Cofnij</button>
        <button
          type='button'
          class='btn btn-success'
          {{on 'click' @onSave}}
        >Zapisz</button>
      </div>
    </div>
  </div>
</ModalDialog>