<table class='table table-striped'>
  <thead>
    <tr>
      <th scope='col'>Artykuły</th>
      <th scope='col'>Ilość</th>
      <th scope='col'>Miejsce</th>
      <th scope='col'>Note</th>
    </tr>
  </thead>
  <tbody>
    {{#each @tables as |table|}}
      <tr>
        <td>{{table.articles}}</td>
        <td>{{table.count}}{{table.unit}}</td>
        <td>{{table.target}}</td>
        <td>{{table.note}}</td>
        <td><div class='input-group-sm'>
            {{! template-lint-disable no-action }}
            <button
              class='btn btn-primary'
              type='button'
              {{action 'onDeleted' table}}
            >Usuń</button>
          </div></td>
      </tr>
    {{/each}}
  </tbody>
</table>