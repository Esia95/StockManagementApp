<table class='table table-striped'>
  <thead>
    <tr>
      <th scope='col'>Artykuły</th>
      <th scope='col'>Ilość</th>
    </tr>
  </thead>
  <tbody>
    {{#each @bluecrest as |bluecrest|}}
      <tr>
        <td>{{bluecrest.articles}}</td>
        <td>{{bluecrest.count}} {{bluecrest.unit}}</td>

        <td><div class='form-check'>
            <input
              class='form-check-input'
              type='checkbox'
              value=''
              id='flexCheckDefault'
              {{!-- {{on 'click' this.onClick}} --}}
            />
          </div></td>
        <td><div class='input-group-sm'>
            <LinkTo @route='home.bluecrests.modal' @model={{bluecrest}}><button
                class='btn btn-primary'
                type='button'
              >Edytuj</button></LinkTo>
          </div></td>
        <td><div class='input-group-sm'>
            {{! template-lint-disable no-action }}
            <button
              class='btn btn-primary'
              type='button'
              {{action 'onDeleted' bluecrest}}
            >Usuń</button>
          </div></td>
      </tr>
    {{/each}}
  </tbody>
</table>