{{! <Navbar /> }}

{{page-title 'Login'}}

<Header>Logowanie</Header>
<div class='container'>
  <form {{on 'submit' this.onSubmit}}>

    <div class='mb-3 row'>
      <label for='username' class='col-sm-2 col-form-label'>Nick</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='username'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label for='inputPassword' class='col-sm-2 col-form-label'>Hasło</label>
      <div class='col-sm-10'>
        <input
          type='password'
          class='form-control'
          id='inputPassword'
          placeholder='password'
          {{on 'input' this.onPasswordChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <button type='submit' class='btn btn-primary'>Zaloguj się</button>

      <button
        type='button'
        class='btn'
        id='oauth'
        {{on 'click' this.on0AuthLoginOrRegister}}
      >Zaloguj się poprzez 0auth</button>
    </div>
  </form>

  <div>
    <span>Nie masz konta? </span><LinkTo
      class='register'
      @route='register'
    >Zarejestruj się</LinkTo>
  </div>
</div>

{{outlet}}