<ModalDialog @translucentOverlay={{true}}>
  <Table::Firm::FirmShowTable @table={{this.model}} />

  <tbody>
    <tr>
      <td><div class='mb-3 row'>
          <label for='username' class='col-sm-2 col-form-label'></label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='article'
              placeholder='article'
              value={{this.model.articles}}
              disabled
            />
          </div>
        </div></td>
      <td><div class='mb-3 row'>
          <label for='username' class='col-sm-2 col-form-label'></label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='count'
              placeholder='ilość'
              value={{this.model.count}}
              {{on 'input' this.onCountChange}}
            />
          </div>
        </div></td>
      <td><div class='mb-3 row'>
          <label for='username' class='col-sm-2 col-form-label'></label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='target'
              placeholder='Miejsce'
              value={{this.model.target}}
              disabled
            />
          </div>
        </div></td>
      <td><div class='mb-3 row'>
          <label for='username' class='col-sm-2 col-form-label'></label>
          <div class='col-sm-10'>
            <input
              type='text'
              class='form-control'
              id='note'
              placeholder='Notatka'
              value={{this.model.note}}
              {{on 'input' this.onNoteChange}}
            />
          </div>
        </div></td>

    </tr>
  </tbody>

  <div class='mb-3 row'>
    <div class='d-flex'>
      <button
        type='submit'
        class='btn btn-primary w-50 me-1'
        disabled={{this.shouldDisabledButton}}
        {{on 'click' this.onSave}}
      >Save</button>
      <button
        type='button'
        class='btn btn-danger w-50 ms-1'
        {{on 'click' this.discardChanges}}
      >Cancel</button>
    </div>
  </div>

</ModalDialog>