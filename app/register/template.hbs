{{page-title 'Register'}}

<Header>Register</Header>

<FormGenerator @onSubmit={{this.onSubmit}} as |FG|>
  <FG.input @label='Imię' @onChange={{fn this.onPropertyChange 'username'}} />
  <FG.input @label='Email' @onChange={{fn this.onPropertyChange 'email'}} />
  <FG.input
    @label='Hasło'
    @type='password'
    @onChange={{fn this.onPropertyChange 'password'}}
  />

  <FG.button @label='Zarejestruj się' @type='submit' />

  <FG.container>
    <span>Mam juz konto. </span><LinkTo @route='login'>Zaloguj się.</LinkTo>
  </FG.container>
</FormGenerator>

{{outlet}}